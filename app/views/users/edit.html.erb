
<div class='account-page' >
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
     
     
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user  do |form| %>
        <div class='field'>
        <label class="form-text">ニックネーム</label>
          <div class='field-label'>
             <%= form.text_field :nickname %></div>
           <label class="form-text">email</label>
           <div class='field'>
            <div class='field-label'>
              <%= form.text_field :email %>
            </div>
            <label class="form-text">Facebook</label>
            <div class='field-label'>
              <%= form.text_field :facebook_url %>
            </div>
            <label class="form-text">Instagram</label>
            <div class='field-label'>
              <%= form.text_field :instagram_url %>
            </div>
            
          </div>
  
          <div class='actions'>
            <div><%= form.submit "保存" %></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="link">
      <a href="/">Topページへ戻る</a>
      </div>
  </div>
  
</div>
